@using WebFrontToBack.Areas.Admin.ViewModel;
@model ServiceVM;


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form class="forms-sample" method="post" action="create">
                <div class="form-group">
                    <label asp-for="Services.Name"></label>
                    <input asp-for="Services.Name" class="form-control" placeholder="Service Name">
                    <span class="text text-danger" asp-validation-for="Services.Name"></span>

                    <label asp-for="Services.Price"></label>
                    <input asp-for="Services.Price" class="form-control" placeholder="Service Price">
                    <span class="text text-danger" asp-validation-for="Services.Price"></span>

                    <label asp-for="Services.Description"></label>
                    <input asp-for="Services.Description" class="form-control" placeholder="Service Description">
                    <span class="text text-danger" asp-validation-for="Services.Description"></span>

                    <label asp-for="Services.CategoryId"></label>
                    <input asp-for="Services.CategoryId" class="form-control" placeholder="Service CategoryId">
                    <span class="text text-danger" asp-validation-for="Services.CategoryId"></span>

                    <label asp-for="Services.ServiceImages"></label>
                    <input asp-for="Services.ServiceImages" class="form-control" placeholder="Service ServiceImages">
                    <span class="text text-danger" asp-validation-for="Services.ServiceImages"></span>
                    <select asp-for="Services.CategoryId">
                        @foreach (Category category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>

                </div>
                <button type="submit" class="btn btn-primary me-2 text-light">Create</button>
                <button class="btn btn-light" asp-action="Index">Go back</button>

            </form>
        </div>
    </div>
</div>

