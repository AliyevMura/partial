
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-success text-light" asp-area="Admin" asp-controller="TeamMember" asp-action="Create">Create TeamMember</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                           
                            <th>
                                TeamMember Name
                            </th>

                            <th>
                                TeamMember Image
                            </th>



                            <th>
                              
                                TeamMember Profession
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (TeamMember item in Model)
                        {
                            <tr>
                                

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Image
                                </td>

                                <td>
                                    @item.Profession
                                </td>
                                <td>
                                    <a class="btn btn-primary text-light">Detail</a>
                                    <a class="btn btn-warning text-light" asp-area="Admin" asp-controller="TeamMember" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                                    <a class="btn btn-danger text-light" asp-area="Admin" asp-controller="TeamMember" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                                </td>
                            </tr>
                           
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



